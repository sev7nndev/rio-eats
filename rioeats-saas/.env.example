# ================================
# RIO EATS SAAS - CONFIGURATION
# ================================

# Database Configuration
DATABASE_URL="postgresql://rioeats_user:rioeats_password@localhost:5432/rioeats"
REDIS_URL="redis://localhost:6379"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Mercado Pago Configuration
MP_CLIENT_ID="your-mercadopago-client-id"
MP_CLIENT_SECRET="your-mercadopago-client-secret"
MP_WEBHOOK_SECRET="your-mercadopago-webhook-secret"
MP_WEBHOOK_URL="https://api.rioeats.com/webhooks/mp"
MP_SANDBOX="true"  # Set to "false" for production

# Google Integration
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# App Configuration
NODE_ENV="development"
PORT="3001"
API_URL="http://localhost:3001"
FRONTEND_URL="http://localhost:3000"
ADMIN_URL="http://localhost:3002"

# Email Configuration (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-email-password"
FROM_EMAIL="noreply@rioeats.com"
FROM_NAME="Rio Eats"

# File Upload Configuration
MAX_FILE_SIZE="5MB"
UPLOAD_PATH="./uploads"
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# Rate Limiting
RATE_LIMIT_WINDOW="15"  # minutes
RATE_LIMIT_MAX="100"    # requests per window

# Session Configuration
SESSION_SECRET="your-session-secret-here"

# Admin Configuration
ADMIN_EMAIL="sevenbeatx@gmail.com"
ADMIN_PASSWORD="24526082"  # This will be hashed

# Features Flags
ENABLE_REGISTRATION="true"
ENABLE_TRIAL="true"
TRIAL_DAYS="7"
MONTHLY_PRICE="99.00"

# Webhook Security
WEBHOOK_SECRET="your-webhook-signing-secret"

# Logging
LOG_LEVEL="info"
LOG_FILE="./logs/app.log"

# Health Check
HEALTH_CHECK_PATH="/health"
HEALTH_CHECK_TIMEOUT="30000"